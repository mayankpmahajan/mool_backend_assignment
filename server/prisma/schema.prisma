generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              Int       @id @default(autoincrement())
  name            String?
  email           String?   @unique
  phoneNumber     String?   @unique
  role            Role      @default(PASSENGER)
  otpCode         String?   // last generated OTP
  otpExpiresAt    DateTime? // expiry for OTP
  aadhaarVerified Boolean   @default(false)
  selfieVerified  Boolean   @default(false)
  passwordHash    String?   // optional if you support email+password later
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  jwtToken     String
}


enum Role {
  PASSENGER
  DRIVER
  ADMIN
}
